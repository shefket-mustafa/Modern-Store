{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": [
    "./server.ts",
    "./routes/**/*",
    "./models/**/*",
    "./controllers/**/*",
    "./middleware/**/*",
    "./utils/**/*",
    "./serverTypes.ts",
    "../types/**/*"
  ],
  "exclude": [
    "../client",
    "../client/**/*",
    "dist",
    "node_modules"
  ]
}
